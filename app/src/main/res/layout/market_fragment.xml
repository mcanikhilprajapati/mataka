<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65013D">

    <LinearLayout
        android:id="@+id/linearHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/no_records" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alegreya_sc"
            android:gravity="center"
            android:text="@string/no_game_list_found_in_the_market"
            android:textColor="@color/Black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_crimson_corner"
            android:fontFamily="@font/helvetica"
            android:letterSpacing="0.2"
            android:text="@string/retry"
            android:textColor="@color/White"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtTodayMarket"
        android:layout_width="0dp"
        android:layout_height="@dimen/_75sdp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@drawable/btn_blue_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_wallet" />

            <androidx.appcompat.widget.AppCompatTextView
                android:paddingTop="@dimen/_5sdp"
                android:id="@+id/txtWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="@+id/txtGameName"
                app:layout_constraintTop_toBottomOf="@+id/txtGameName"
                android:text="445-30-226" />

        </LinearLayout>


        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@drawable/btn_blue_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_chat" />

            <androidx.appcompat.widget.AppCompatTextView
                android:paddingTop="@dimen/_5sdp"
                android:id="@+id/txtChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="@+id/txtGameName"
                app:layout_constraintTop_toBottomOf="@+id/txtGameName"
                android:text="Chat" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_kalyan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@drawable/btn_blue_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_play" />

            <androidx.appcompat.widget.AppCompatTextView
                android:paddingTop="@dimen/_5sdp"
                android:id="@+id/txtKalayan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="@+id/txtGameName"
                app:layout_constraintTop_toBottomOf="@+id/txtGameName"
                android:text="Starline" />

        </LinearLayout>


    </LinearLayout>
    <!--    <androidx.appcompat.widget.AppCompatTextView-->
    <!--        android:id="@+id/txtTodayMarket"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="5dp"-->
    <!--        android:layout_marginEnd="5dp"-->
    <!--        android:fontFamily="@font/quicksand"-->
    <!--        android:gravity="center"-->
    <!--        android:text="@string/today_market"-->
    <!--        android:layout_marginBottom="@dimen/_30sdp"-->
    <!--        android:textColor="@color/black"-->
    <!--        android:textSize="@dimen/_12sdp"-->
    <!--        android:textStyle="bold"-->
    <!--        app:layout_constraintHorizontal_bias="0.5"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/txtTodayMarket" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:listitem="@layout/item_game_list_final"
        tools:visibility="visible" />

    <ir.alirezabdn.wp7progress.WP10ProgressBar
        android:id="@+id/wp10progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:animationDuration="1500"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorHeight="7"
        app:indicatorRadius="5"
        app:interval="160"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>